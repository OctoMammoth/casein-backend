// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(cuid())
  login    String  @unique
  password String
  name     String
  surname  String?
  role     RoleEnum
}

enum RoleEnum {
  user
  tour_agency
  admin
}
